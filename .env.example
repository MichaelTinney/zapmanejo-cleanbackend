# Database Configuration
# Replace with your actual PostgreSQL connection string from DigitalOcean or other provider
# Format: postgres://username:password@host:port/database?sslmode=require
DATABASE_URL=postgres://user:password@hostname:25060/defaultdb?sslmode=require

# Server Configuration
PORT=5000

# Graceful Shutdown Configuration (optional, defaults to 30 seconds)
SHUTDOWN_TIMEOUT_SECONDS=30

# CORS Configuration (optional, defaults to *)
# For production, set to your frontend domain(s), e.g.: https://your-app.com
CORS_ALLOW_ORIGINS=*

# JWT Secret - MUST be a strong random string in production
# Generate with: openssl rand -base64 32
JWT_SECRET=your_very_strong_jwt_secret_change_this_in_production

# Auto-Migration (optional, set to "true" to run migrations on startup)
# Recommended: false in production, use proper migration tools instead
AUTO_MIGRATE=true

# PayPal Configuration (for payment processing)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_SECRET=your_paypal_secret_here
PAYPAL_MODE=sandbox

# WhatsApp Webhook Configuration (for inbound messages)
WHATSAPP_NUMBER=1234567890
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token_change_this

# Lifetime Early Adopter Configuration
LIFETIME_TOTAL=200
LIFETIME_SOLD=0

# IMPORTANT SECURITY NOTES:
# - Never commit real credentials to version control
# - Rotate all secrets if they are accidentally exposed
# - Use environment variables or secrets management in production
# - Generate strong random values for JWT_SECRET and WHATSAPP_VERIFY_TOKEN
